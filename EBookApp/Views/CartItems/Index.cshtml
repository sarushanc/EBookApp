@model IEnumerable<EBookApp.Models.CartItem>

<h2>Your Cart</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Book Title</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.Book?.Title ?? "Unknown Book")</td> <!-- Check for null and display fallback text -->
                <td>@item.Quantity</td>
                <td>@("Rs. " + (item.Book?.Price.ToString("N2") ?? "N/A"))</td> <!-- Display price with Rs. prefix -->
                <td>@("Rs. " + (item.Book != null ? (item.Quantity * item.Book.Price).ToString("N2") : "0.00"))</td> <!-- Total with Rs. prefix -->
                <td>
                    <form asp-action="Delete" asp-controller="CartItems" asp-route-id="@item.Id" method="post">
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Total: @("Rs. " + Model.Sum(item => item.Book != null ? item.Quantity * item.Book.Price : 0).ToString("N2"))</h3>

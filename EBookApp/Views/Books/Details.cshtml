@model EBookApp.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<div class="card shadow-sm mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <h4 class="card-title text-center mb-4">Book Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4 text-end fw-bold">Title:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-4 text-end fw-bold">Author:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Author)</dd>

            <dt class="col-sm-4 text-end fw-bold">Price:</dt>
            <dd class="col-sm-8">@("Rs. " + Model.Price.ToString("N2"))</dd> <!-- Price with Rs. prefix -->

            <dt class="col-sm-4 text-end fw-bold">Category:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Category)</dd>

            <dt class="col-sm-4 text-end fw-bold">ISBN:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ISBN)</dd>
        </dl>
    </div>
</div>

<!-- Action Buttons -->
<div class="text-center mt-4">
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2"><i class="fas fa-edit"></i> Edit</a>
    }
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-list"></i> Back to List</a>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script> <!-- FontAwesome for icons -->
}
